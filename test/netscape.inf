; Test certificate for Netscape OIDs
; Generate with: certreq -new netscape.inf

[Version]
Signature = "$Windows NT$"

[Strings]
; Extensions
;
; Subject alternative name
szOID_SUBJECT_ALT_NAME2  = 2.5.29.17
; Basic constraints
szOID_BASIC_CONSTRAINTS2 = 2.5.29.19
; Enhanced key usage
szOID_ENHANCED_KEY_USAGE = 2.5.29.37

; EKUs
;
; Server authentication
szOID_PKIX_KP_SERVER_AUTH  = 1.3.6.1.5.5.7.3.1
; Client authentication
szOID_PKIX_KP_CLIENT_AUTH  = 1.3.6.1.5.5.7.3.2
; Code-signing
szOID_PKIX_KP_CODE_SIGNING = 1.3.6.1.5.5.7.3.3
; Server Gated Cryptography (SGC)
szOID_NETSCAPE_KP_SGC      = 2.16.840.1.113730.4.1

[NewRequest]
; Request type
RequestType = Cert

; Friendly name
FriendlyName = "CertUiExts - Netscape"

; Subject name
Subject = "CN=netscape.com"

; Validity period & units
ValidityPeriod = Years
ValidityPeriodUnits = 10

; Hash algorithm
HashAlgorithm = SHA256

; Key algorithm & length
KeyAlgorithm = RSA
KeyLength = 2048

; Encryption cipher & length
EncryptionAlgorithm = AES
EncryptionLength = 256

[Extensions]
; Critical extensions
Critical = %szOID_BASIC_CONSTRAINTS2%

; Basic constraints
%szOID_BASIC_CONSTRAINTS2% = "{text}"
_continue_ = "CA=false&PathLength=0"

; Enhanced key usage
%szOID_ENHANCED_KEY_USAGE% = "{text}"
_continue_ = "%szOID_PKIX_KP_SERVER_AUTH%,"
_continue_ = "%szOID_PKIX_KP_CLIENT_AUTH%,"
_continue_ = "%szOID_PKIX_KP_CODE_SIGNING%,"
_continue_ = "%szOID_NETSCAPE_KP_SGC%"

; Subject alternative name
%szOID_SUBJECT_ALT_NAME2% = "{text}"
_continue_ = "DNS=netscape.com"
